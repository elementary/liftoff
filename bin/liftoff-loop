#!/bin/bash

# Load configuration
config="/usr/lib/liftoff/liftoff.conf"
source $config

pbuilderrc="/usr/lib/liftoff/pbuilderrc"

# Start loop
for arch in $(echo $target_archs) ;
    do for dist in $(echo $target_distros) ;
        do liftoff -a "${arch}" -c "$config" -d "${dist}" -p "$pbuilderrc" ;
        done ;
    done
